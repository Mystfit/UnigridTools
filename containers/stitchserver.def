BootStrap: docker
From: debian:sid

%runscript
    StitchServer /home/render/unigrid

%startscript
    StitchServer /home/render/unigrid

%post
    apt-get update
    apt-get install -y python3 python3-pip python3-openimageio git  
    pip3 install setuptools
    
    if [ ! -d "./UnigridTools" ]; then 
    	git clone https://github.com/mystfit/UnigridTools.git
    else
        git -C ./UnigridTools pull
    fi
    cd ./UnigridTools/server
    python3 setup.py sdist
    pip3 install ./dist/Stitch-0.1.tar.gz
    cd ../..

